<UserControl x:Class="TOTool.UI.Controls.PlayerInfoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border Background="#33000000" CornerRadius="5" Padding="10">
        <StackPanel>
            <!-- HP 進度條 -->
            <Grid Margin="0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="HP:" Foreground="White" VerticalAlignment="Center"/>
                <ProgressBar Grid.Column="1" Height="20" Value="{Binding HPPercentage}"
                           Foreground="#FF4444" Background="#33FFFFFF"/>
                <TextBlock Grid.Column="1" Text="{Binding HPText}" Foreground="White"
                         HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>

            <!-- MP 進度條 -->
            <Grid Margin="0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="MP:" Foreground="White" VerticalAlignment="Center"/>
                <ProgressBar Grid.Column="1" Height="20" Value="{Binding MPPercentage}"
                           Foreground="#4444FF" Background="#33FFFFFF"/>
                <TextBlock Grid.Column="1" Text="{Binding MPText}" Foreground="White"
                         HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>

            <!-- 經驗值進度條 -->
            <Grid Margin="0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="EXP:" Foreground="White" VerticalAlignment="Center"/>
                <ProgressBar Grid.Column="1" Height="20" Value="{Binding EXPPercentage}"
                           Foreground="#44FF44" Background="#33FFFFFF"/>
                <TextBlock Grid.Column="1" Text="{Binding EXPText}" Foreground="White"
                         HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </StackPanel>
    </Border>
</UserControl> 